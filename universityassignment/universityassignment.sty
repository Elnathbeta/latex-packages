\ProvidesPackage{universityassignment}[2016/11/01 v1.0 University Assignment Title Page]

%%% COMMANDS
\newcommand*{\institution}[1]{\def\@institution{#1}} % Name of your university/college
\newcommand*{\majorheading}[1]{\def\@majorheading{#1}} % Major heading such as course name
\newcommand*{\minorheading}[1]{\def\@minorheading{#1}} % Minor heading such as course title
%use \title to define the title of your document
\newcommand*{\subtitle}[1]{\def\@subtitle{#1}} % Subtitle
%use \author to define the authors. Separate them by \\
\newcommand*{\supervisor}[1]{\def\@supervisor{#1}} % Supervisor's name
\newcommand*{\examiner}[1]{\def\@examiner{#1}} % Examiner's name
%use \date to define the date. It defaults to \today
\newcommand*{\logo}[1]{\def\@logo{#1}} % University logo. Use it like this: \logo{\includegraphics[scale=0.5]{images/mylogo}}

%%% HEADING COMMANDS
\newcommand*{\authorheading}[1]{\def\@authorheading{#1}} % Heading that precedes author names
\newcommand*{\supervisorheading}[1]{\def\@supervisorheading{#1}} % Heading that precedes supervisor's name
\newcommand*{\examinerheading}[1]{\def\@examinerheading{#1}} % Heading that precedes examiner's name

% DEFAULT VALUES FOR MACROS
\newcommand*{\@institution}{Institution}
\newcommand*{\@majorheading}{Major heading}
\newcommand*{\@minorheading}{Minor heading}
\newcommand*{\@authorheading}{Authors:}
\newcommand*{\@supervisorheading}{Supervisor:}
\newcommand*{\@examinerheading}{Examiner:}


\renewcommand*{\maketitle}{
\begin{titlepage}
	\center % Center everything on the page

	%%% HEADINGS
	\textsc{\LARGE \@institution}\\[1.5cm]
	\textsc{\Large \@majorheading}\\[0.5cm]
	\textsc{\large \@minorheading}\\[0.5cm]

	%%% TITLE
	\rule{\linewidth}{0.5mm} \\[0.4cm]
	\ifdefined\@subtitle
		{ \huge \bfseries \@title}\\[0.4cm]
		{ \Large \@subtitle }\\[0.2cm]
	\else
		{ \huge \bfseries \@title}\\ %No spacing here
	\fi
	\rule{\linewidth}{0.5mm} \\[1.5cm]

	%%% AUTHORS
	\begin{minipage}{0.4\textwidth}
		\begin{flushleft} \large
			\emph{\@authorheading}\\
			\@author
		\end{flushleft}
	\end{minipage}
	~ %This is important! It makes the two minipages side-to-side
	%%% SUPERVISOR AND EXAMINER
	\begin{minipage}{0.4\textwidth}
		\begin{flushright} \large
			%SUPERVISOR
			\ifdefined\@supervisor
				\emph{\@supervisorheading} \\
				\@supervisor
			\fi
			%EXAMINER
			\ifdefined\@examiner
				\\[0.5cm]
				\emph{\@examinerheading}\\
				\@examiner
			\fi
		\end{flushright}
	\end{minipage}\\[3cm]

	%%% DATE
	{\large \@date}\\[2cm]

	%%% LOGO
	\ifdefined\@logo
		\@logo\\[1cm] % Include a department/university logo - this will require the graphicx package
	\fi

	\vfill
\end{titlepage}
}

\endinput
